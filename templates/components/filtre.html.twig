<div class="flex relative items-center space-x-4 mb-8 p-6 justify-center bg-white rounded-lg shadow-lg">
    <form method="GET" action="{{ path('app_books_list') }}" class="flex items-center space-x-4">
        <div class="flex items-center space-x-2 flex-1">
            <select name="tag" id="tagName" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-600 focus:border-red-600 transition-all w-full max-w-xs">
                <option value="0">TOUS</option>
                {% for tag in tags %}
                    <option value="{{ tag.id }}" {{ selectedTagId is defined and selectedTagId == tag.id ? 'selected' : '' }}>{{ tag.name }}</option>
                {% endfor %}
            </select>
        </div>

        <div class="flex items-center space-x-2">
            <label for="popular" class="text-gray-700 font-medium">Populaire :</label>
            <input type="checkbox" name="popular" id="popular"  class="scale-100 transition-all duration-500 ease-in-out hover:scale-110 checked:scale-100 w-5 h-5" {{ sortByPopularity is defined and sortByPopularity ? 'checked' : '' }}>
        </div>

        <button type="submit" class="px-6 py-2 bg-gradient-to-r from-red-600 to-red-800 text-white rounded-lg shadow-md hover:from-red-700 hover:to-red-900 hover:shadow-lg transition-all">
            Appliquer
        </button>
    </form>
</div>