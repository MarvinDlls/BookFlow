{# templates/book/preview.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Aperçu - {{ book.title }}{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Aperçu du livre</h4>
            <a href="{{ path('app_book_details', {'id': book.id}) }}" class="btn btn-sm btn-outline-primary">Voir tous les détails</a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center mb-3 mb-md-0">
                    {% if book.thumbnail %}
                        <img src="{{ book.thumbnail }}" alt="{{ book.title }}" class="img-fluid shadow rounded" style="max-height: 300px;">
                    {% else %}
                        <div class="d-flex justify-content-center align-items-center bg-light rounded" style="height: 300px;">
                            <i class="bi bi-book" style="font-size: 6rem; color: #6c757d;"></i>
                        </div>
                    {% endif %}
                </div>
                <div class="col-md-8">
                    <h2 class="card-title">{{ book.title }}</h2>
                    
                    {% if book.authors %}
                        <p class="text-muted mb-3">
                            <i class="bi bi-person-fill me-1"></i> 
                            {{ book.authors|join(', ') }}
                        </p>
                    {% endif %}
                    
                    <div class="d-flex flex-wrap gap-3 mb-3">
                        {% if book.publishedDate %}
                            <span class="badge bg-secondary">
                                <i class="bi bi-calendar me-1"></i> {{ book.publishedDate }}
                            </span>
                        {% endif %}
                        
                        {% if book.pageCount %}
                            <span class="badge bg-secondary">
                                <i class="bi bi-file-text me-1"></i> {{ book.pageCount }} pages
                            </span>
                        {% endif %}
                        
                        {% if book.language %}
                            <span class="badge bg-secondary">
                                <i class="bi bi-globe me-1"></i> {{ book.language|upper }}
                            </span>
                        {% endif %}
                    </div>
                    
                    {% if book.categories %}
                        <div class="mb-3">
                            {% for category in book.categories %}
                                <span class="badge bg-info text-dark me-1">{{ category }}</span>
                            {% endfor %}
                        </div>
                    {% endif %}
                    
                    {% if book.description %}
                        <div class="mt-3">
                            <h5>Description</h5>
                            <p class="card-text" style="max-height: 200px; overflow-y: auto;">
                                {{ book.description|length > 300 ? book.description|slice(0, 300) ~ '...' : book.description }}
                            </p>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        {# Dans la boucle foreach des livres, modifiez la div "card-footer" comme ceci #}
<div class="card-footer">
    <div class="d-flex justify-content-between">
        <a href="{{ path('app_book_details', {'id': book.id}) }}" class="btn btn-sm btn-primary">Détails</a>
        <button type="button" class="btn btn-sm btn-outline-info btn-quick-preview" data-book-id="{{ book.id }}" data-bs-toggle="modal" data-bs-target="#bookPreviewModal">
            <i class="bi bi-eye"></i> Aperçu
        </button>
    </div>
</div>
    </div>
</div>
{% endblock %}