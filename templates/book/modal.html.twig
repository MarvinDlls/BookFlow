{% extends 'base.html.twig' %}

{% block body %}
<div class="modal fade" id="bookPreviewModal" tabindex="-1" aria-labelledby="bookPreviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="bookPreviewModalLabel">Aperçu du livre</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4 text-center mb-3 mb-md-0">
                        <img id="modalBookImage" src="" alt="Couverture du livre" class="img-fluid shadow rounded" style="max-height: 250px;">
                        <div id="modalBookPlaceholder" class="d-none d-flex justify-content-center align-items-center bg-light rounded" style="height: 250px;">
                            <i class="bi bi-book" style="font-size: 5rem; color: #6c757d;"></i>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <h3 id="modalBookTitle"></h3>
                        <p class="text-muted" id="modalBookAuthors"></p>
                        
                        <div id="modalBookInfo" class="d-flex flex-wrap gap-2 mb-3">
                            <!-- Les badges seront ajoutés ici par JavaScript -->
                        </div>
                        
                        <div class="mt-3">
                            <h5>Description</h5>
                            <p id="modalBookDescription" style="max-height: 150px; overflow-y: auto;"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <a id="modalBookPreview" href="#" target="_blank" class="btn btn-primary">
                    <i class="bi bi-eye me-1"></i> Aperçu Google Books
                </a>
                <a id="modalBookDetails" href="#" class="btn btn-outline-primary">
                    <i class="bi bi-info-circle me-1"></i> Détails complets
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}