{% extends 'base.html.twig' %}

{% block title %}Aperçu du Livre -
	{{ book.title }}
{% endblock %}

{% block body %}
	<div class="container py-4">
		<div class="card">
			<div class="card-header">
				<h4 class="mb-0">Aperçu du livre:
					{{ book.title }}</h4>
			</div>
			<div class="card-body">
				<div class="row">
					<div class="col-md-4 text-center mb-3 mb-md-0">
						<img src="{{ book.thumbnail }}" alt="{{ book.title }}" class="img-fluid shadow rounded" style="max-height: 300px;">
					</div>
					<div class="col-md-8">
						<h2 class="card-title">{{ book.title }}</h2>
						<p class="text-muted">
							<i class="bi bi-person-fill me-1"></i>
							{{ book.authors|join(', ') }}
						</p>
						<div class="d-flex flex-wrap gap-3 mb-3">
							<span class="badge bg-secondary">
								<i class="bi bi-file-text me-1"></i>
								{{ book.pageCount }}
								pages
							</span>
						</div>
						<div>
							<h5>Description</h5>
							<p>{{ book.description }}</p>
						</div>
						<div class="mt-3">
							{% if book.previewLink %}
                                <h5>Aperçu du livre</h5>
                                <iframe src="https://books.google.fr/books?id={{ book.id }}&printsec=frontcover&output=embed" width="100%" height="600"></iframe>
                        {% else %}
                                <p>Aperçu non disponible</p>
                        {% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
